<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="520" d:DesignHeight="420"
        x:Class="FT_AlarmFixer.Views.AboutWindow"
        Title="About FT Alarm Fixer"
        Icon="/Assets/ft-fixer.ico"
        Width="520"
        Height="420"
        MinWidth="480"
        MinHeight="380"
        FontFamily="Bahnschrift, Segoe UI">

    <Window.Background>
        <SolidColorBrush Color="#F5F6F8" />
    </Window.Background>

    <Window.Styles>
        <Style Selector="TextBlock">
            <Setter Property="Foreground" Value="#1C232B" />
        </Style>
        <Style Selector="TextBlock.subtitle">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Opacity" Value="0.75" />
            <Setter Property="Foreground" Value="#5B6672" />
        </Style>
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="CornerRadius" Value="14" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderBrush" Value="#D6DCE3" />
            <Setter Property="Padding" Value="16" />
        </Style>
    </Window.Styles>

    <Border Classes="card" Margin="16">
        <StackPanel Spacing="14">
            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12" VerticalAlignment="Center">
                <Border Width="54" Height="54" CornerRadius="14" Background="#2D6CDF" VerticalAlignment="Center">
                    <TextBlock Text="F"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="26"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center" />
                </Border>
                <StackPanel Grid.Column="1" Spacing="4">
                    <TextBlock Text="FT Alarm Fixer" FontSize="20" FontWeight="SemiBold" />
                    <TextBlock Text="Converts FactoryTalk View alarm exports into corrected tag lists." Classes="subtitle" />
                </StackPanel>
            </Grid>

            <Border Background="#EEF1F4" CornerRadius="10" Padding="12">
                <StackPanel Spacing="6">
                    <TextBlock Text="What it does" FontWeight="SemiBold" />
                    <TextBlock TextWrapping="Wrap" Classes="subtitle">
                        Reads XML exports, fixes the 1-based bit indices, and outputs an Excel file
                        with Tag and Description columns.
                    </TextBlock>
                </StackPanel>
            </Border>

            <Border Background="#EEF1F4" CornerRadius="10" Padding="12">
                <StackPanel Spacing="6">
                    <TextBlock Text="Example" FontWeight="SemiBold" />
                    <TextBlock TextWrapping="Wrap" Classes="subtitle">
                        Input: Hmi.Alarm[0].1 â†’ Output: Hmi.Alarm[0].0
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </Border>
</Window>
